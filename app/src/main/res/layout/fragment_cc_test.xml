<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 配置区域 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp">

                <!-- URL输入 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="目标URL"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/etTargetUrl"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="https://example.com"
                    android:inputType="textUri"
                    android:textColor="#000000"
                    android:background="@drawable/edittext_background"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:layout_marginBottom="12dp" />

                <!-- 请求方法选择 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="请求方法"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/rgRequestMethod"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbGet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GET"
                            android:checked="true"
                            android:textColor="#000000"
                            android:buttonTint="#5FA8D3" />

                        <RadioButton
                            android:id="@+id/rbPost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="POST"
                            android:textColor="#000000"
                            android:buttonTint="#5FA8D3" />

                    </RadioGroup>

                </LinearLayout>

                <!-- POST数据区域（默认隐藏） -->
                <LinearLayout
                    android:id="@+id/layoutPostData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="POST数据"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/etPostData"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:hint="请输入POST数据（JSON、表单数据等）"
                        android:inputType="textMultiLine"
                        android:textColor="#000000"
                        android:background="@drawable/edittext_background"
                        android:padding="12dp" />

                    <!-- Content-Type选择 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Content-Type"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="4dp" />

                    <Spinner
                        android:id="@+id/spinnerContentType"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/edittext_background"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp" />

                </LinearLayout>

                <!-- 参数行 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="线程数"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <EditText
                            android:id="@+id/etThreadCount"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:hint="5"
                            android:inputType="number"
                            android:text="5"
                            android:textColor="#000000"
                            android:background="@drawable/edittext_background"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="请求数"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <EditText
                            android:id="@+id/etRequestCount"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:hint="50"
                            android:inputType="number"
                            android:text="50"
                            android:textColor="#000000"
                            android:background="@drawable/edittext_background"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="延迟(ms)"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <EditText
                            android:id="@+id/etDelay"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:hint="200"
                            android:inputType="number"
                            android:text="200"
                            android:textColor="#000000"
                            android:background="@drawable/edittext_background"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- User-Agent选择 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="User-Agent"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <Spinner
                    android:id="@+id/spinnerUserAgent"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_background"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:layout_marginBottom="12dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 选项设置区域 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="测试选项"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/cbKeepScreenOn"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="保持屏幕常亮"
                        android:textColor="#000000"
                        android:buttonTint="#5FA8D3" />

                    <CheckBox
                        android:id="@+id/cbRandomDelay"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="随机延迟 (±50%)"
                        android:textColor="#000000"
                        android:buttonTint="#5FA8D3" />

                    <CheckBox
                        android:id="@+id/cbFollowRedirects"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="跟随重定向"
                        android:textColor="#000000"
                        android:checked="true"
                        android:buttonTint="#5FA8D3" />

                    <CheckBox
                        android:id="@+id/cbRandomUA"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="随机User-Agent"
                        android:textColor="#000000"
                        android:buttonTint="#5FA8D3" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 控制按钮区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btnStart"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="开始测试"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_primary_background" />

            <Button
                android:id="@+id/btnStop"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:enabled="false"
                android:text="停止测试"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_primary_background" />

        </LinearLayout>

        <!-- 辅助按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btnSaveConfig"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="保存配置"
                android:textColor="#000000"
                android:textSize="14sp"
                android:background="@drawable/button_secondary_background" />

            <Button
                android:id="@+id/btnLoadConfig"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="加载配置"
                android:textColor="#000000"
                android:textSize="14sp"
                android:background="@drawable/button_secondary_background" />

            <Button
                android:id="@+id/btnClearLog"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="清空日志"
                android:textColor="#000000"
                android:textSize="14sp"
                android:background="@drawable/button_secondary_background" />

        </LinearLayout>

        <!-- 进度条 -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_marginBottom="12dp"
            android:visibility="gone"
            android:progressTint="#5FA8D3"
            android:progressBackgroundTint="#E0E0E0" />

        <!-- 统计信息 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="测试统计"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- 统计数字 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="成功"
                            android:textColor="#000000"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvSuccessCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="失败"
                            android:textColor="#000000"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvFailCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="总计"
                            android:textColor="#000000"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvTotalCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <!-- 平均响应时间 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#F0F5FF"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="平均响应时间"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvAvgResponseTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0ms"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 日志区域 - 使用NestedScrollView确保可以滚动 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="测试日志"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="#F8F8F8"
                    android:padding="12dp"
                    android:scrollbars="vertical"
                    android:fadeScrollbars="false">

                    <TextView
                        android:id="@+id/tvLog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="准备就绪，请输入URL开始测试...\n"
                        android:textIsSelectable="true"
                        android:textColor="#000000"
                        android:fontFamily="monospace"
                        android:textSize="12sp"
                        android:lineSpacingExtra="4dp" />

                </androidx.core.widget.NestedScrollView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
